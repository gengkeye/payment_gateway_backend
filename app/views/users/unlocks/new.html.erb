<div class='formHeading'>
	<h2>Resend unlock instructions</h2>
</div>
<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-inputs">
	<div class="input email required user_email">
	    <%= f.label :email, class: 'email required control-label' %>
	    <%= f.email_field :email, autofocus: true, class: 'string email required' %>
    </div>
  </div>

  <div class="form-actions actions spacedTop">
    <%= f.submit "Resend unlock instructions", class: 'btn button buttonYellow middle mobileFullWidth' %>
  </div>
<% end %>



